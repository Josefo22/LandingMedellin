<style>
    /* Animación de gradiente en movimiento */
    @keyframes gradient-x {
        0% { background-position: 0% 50%; }
        50% { background-position: 100% 50%; }
        100% { background-position: 0% 50%; }
    }
    
    .animate-gradient-x {
        background-size: 200% 200%;
        animation: gradient-x 15s ease infinite;
    }
    
    /* Animación para texto con gradiente */
    @keyframes gradient-text {
        0% { background-position: 0% 50%; }
        50% { background-position: 100% 50%; }
        100% { background-position: 0% 50%; }
    }
    
    .animate-gradient-text {
        background-size: 200% auto;
        animation: gradient-text 5s ease-in-out infinite;
    }
    
    /* Animación de aparición con desplazamiento hacia arriba */
    @keyframes fade-in-up {
        0% {
            opacity: 0;
            transform: translateY(20px);
        }
        100% {
            opacity: 1;
            transform: translateY(0);
        }
    }
    
    .animate-fade-in-up {
        opacity: 0;
        animation: fade-in-up 0.8s ease forwards;
    }
    
    .delay-300 {
        animation-delay: 0.3s;
    }
    
    .delay-500 {
        animation-delay: 0.5s;
    }
    
    .delay-700 {
        animation-delay: 0.7s;
    }
    
    /* Animación para las partículas flotantes */
    .particles-container {
        pointer-events: none;
    }
    
    .particle {
        position: absolute;
        width: 8px;
        height: 8px;
        border-radius: 50%;
        background: rgba(255, 255, 255, 0.5);
        pointer-events: none;
    }
    
    .particle-1 {
        top: 20%;
        left: 20%;
        animation: float 20s linear infinite;
    }
    
    .particle-2 {
        top: 40%;
        left: 80%;
        width: 12px;
        height: 12px;
        animation: float 25s linear infinite;
        animation-delay: -2s;
    }
    
    .particle-3 {
        top: 70%;
        left: 35%;
        width: 10px;
        height: 10px;
        animation: float 18s linear infinite;
        animation-delay: -5s;
    }
    
    .particle-4 {
        top: 25%;
        left: 75%;
        animation: float 22s linear infinite;
        animation-delay: -7s;
    }
    
    .particle-5 {
        top: 60%;
        left: 10%;
        width: 6px;
        height: 6px;
        animation: float 15s linear infinite;
        animation-delay: -9s;
    }
    
    /* Animación de flotación */
    @keyframes float {
        0% {
            transform: translate(0, 0);
        }
        25% {
            transform: translate(50px, 30px);
        }
        50% {
            transform: translate(20px, 60px);
        }
        75% {
            transform: translate(-40px, 20px);
        }
        100% {
            transform: translate(0, 0);
        }
    }
    
    .animate-float {
        animation: float 12s ease-in-out infinite;
    }
    
    .animate-float-reverse {
        animation: float 10s ease-in-out infinite reverse;
    }
    
    .animate-float-slow {
        animation: bounce 3s ease-in-out infinite;
    }
    
    /* Animación para el texto brillante */
    .glow-text {
        text-shadow: 0 0 5px rgba(255, 255, 255, 0.7);
        animation: glow 2s ease-in-out infinite alternate;
    }
    
    @keyframes glow {
        from {
            text-shadow: 0 0 5px rgba(255, 255, 255, 0.7);
        }
        to {
            text-shadow: 0 0 15px rgba(255, 255, 255, 0.9);
        }
    }
    
    /* Animación para la flecha de desplazamiento */
    .arrow-down {
        animation: pulse 2s infinite;
    }
    
    @keyframes pulse {
        0% {
            transform: translateY(0);
            opacity: 0.8;
        }
        50% {
            transform: translateY(10px);
            opacity: 1;
        }
        100% {
            transform: translateY(0);
            opacity: 0.8;
        }
    }
    
    /* Animación para el trazo SVG */
    .svg-path-animate {
        stroke-dasharray: 100;
        stroke-dashoffset: 100;
        animation: dash 15s linear infinite;
    }
    
    @keyframes dash {
        to {
            stroke-dashoffset: 0;
        }
    }
    
    /* Animación de revelación de texto */
    @keyframes reveal-text {
        0% {
            transform: translateY(20px);
            opacity: 0;
            filter: blur(15px);
        }
        100% {
            transform: translateY(0);
            opacity: 1;
            filter: blur(0);
        }
    }
    
    .animate-reveal-text {
        animation: reveal-text 1.2s cubic-bezier(0.33, 1, 0.68, 1) forwards;
    }
    
    /* Mejoras en los botones */
    .btn-primary, .btn-secondary {
        position: relative;
        overflow: hidden;
    }
    
    .btn-primary:before, .btn-secondary:before {
        content: '';
        position: absolute;
        top: 0;
        left: -100%;
        width: 100%;
        height: 100%;
        background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.2), transparent);
        transition: all 0.5s;
    }
    
    .btn-primary:hover:before, .btn-secondary:hover:before {
        left: 100%;
    }
    
    /* Efecto de hover para las etiquetas */
    .badge {
        position: relative;
        overflow: hidden;
        z-index: 1;
    }
    
    .badge:after {
        content: '';
        position: absolute;
        bottom: 0;
        left: 0;
        width: 100%;
        height: 0;
        background: rgba(255, 255, 255, 0.2);
        transition: all 0.3s;
        z-index: -1;
    }
    
    .badge:hover:after {
        height: 100%;
    }
    
    /* Media queries para ajustes responsivos */
    @media (max-width: 768px) {
        .particle {
            display: none;
        }
        
        .animate-gradient-x {
            animation-duration: 10s;
        }
    }
</style>
